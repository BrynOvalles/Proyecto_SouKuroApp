@page "/usuario"
@page "/usuario/{UsuarioId:int}"
@using Microsoft.AspNetCore.Authorization
@using Shared.Models
@attribute [Authorize]
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject UsuariosServices usuarioservice

<div class="card">
    <div class="card-header">
        <h3>Detalles de Compra</h3>
        <a href="/usuarioCreate" class="btn btn-outline-primary bi bi-plus-square">  Crear</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col" class="text-center">UsuarioId</th>
                    <th scope="col" class="text-center">Nombre De Usuario</th>
                    <th scope="col" class="text-center">Contrasena</th>
                    <th scope="col" class="text-center">Rol</th>
                    
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in ListaUsuarios)
                {
                    <tr>
                        <td class="text-center">@item.UsuarioId</td>
                        <td class="text-center">@item.Nombre_Usuario</td>
                        <td class="text-center">@item.Contrasena</td>
                        <td class="text-center">@item.Rol</td>
                       
                        <td>
                            <a href="/deleteUsuario/@item.UsuarioId" class="btn btn-danger bi bi-trash-fill">Delete</a>
                            <a href="/usuarioEdit/@item.UsuarioId" class="btn btn-primary bi-box-arrow-up-right">Edit</a>
                            <a href="/detailsUsuario/@item.UsuarioId" class="btn btn-success bi-box-arrow-up-right">Detalles</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="card-footer">
        <a href="/" class="btn btn-outline-danger bi bi-house-door-fill"> Volver</a>
    </div>
</div>

@code {
    [Parameter]
    public int UsuarioId { get; set; }
    public Usuario usuario { get; set; } = new Usuario();
    public List<Usuario> ListaUsuarios { get; set; } = new List<Usuario>();
    public int Opcion = 0;


  


    protected override async Task OnInitializedAsync()
    {

        ListaUsuarios = await usuarioservice.Listar(t => true);
        
    }
}
