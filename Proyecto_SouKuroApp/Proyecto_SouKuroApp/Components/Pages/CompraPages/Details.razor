@page "/compras/details"
@inject Proyecto_SouKuroApp.Data.ApplicationDbContext DB
@using Shared.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>Compra</h4>
    <hr />
    @if (compra is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Fecha_Compra</dt>
            <dd class="col-sm-10">@compra.Fecha_Compra</dd>
            <dt class="col-sm-2">NFC</dt>
            <dd class="col-sm-10">@compra.NFC</dd>
            <dt class="col-sm-2">No_Compra</dt>
            <dd class="col-sm-10">@compra.No_Compra</dd>
            <dt class="col-sm-2">Telefono</dt>
            <dd class="col-sm-10">@compra.Telefono</dd>
            <dt class="col-sm-2">Cantidad</dt>
            <dd class="col-sm-10">@compra.Cantidad</dd>
            <dt class="col-sm-2">SubTotal</dt>
            <dd class="col-sm-10">@compra.SubTotal</dd>
            <dt class="col-sm-2">ITBIS</dt>
            <dd class="col-sm-10">@compra.ITBIS</dd>
            <dt class="col-sm-2">Total</dt>
            <dd class="col-sm-10">@compra.Total</dd>
        </dl>
        <div>
            <a href="@($"/compras/edit?compraid={compra.CompraId}")">Edit</a> |
            <a href="@($"/compras")">Back to List</a>
        </div>
    }
</div>

@code {
    Compra? compra;

    [SupplyParameterFromQuery]
    public int CompraId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        compra = await DB.compras.FirstOrDefaultAsync(m => m.CompraId == CompraId);

        if (compra is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
