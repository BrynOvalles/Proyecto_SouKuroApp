@page "/producto"
@page "/producto/{ProductoId:int}"
@using Microsoft.AspNetCore.Authorization
@using Shared.Models
@attribute [Authorize]
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject ProductoServices productoservices

<div class="card">
	<div class="card-header">
		<h3>Productos</h3>
		<a href="/producto/create" class="btn btn-outline-primary bi bi-plus-square">  Crear</a>
	</div>
	<div class="card-body">
	</div>

	<div class="table-responsive">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th scope="col" class="text-center">ID</th>
					<th scope="col" class="text-center">Nombre</th>
					<th scope="col" class="text-center">Descripci&oacute;n:</th>
					<th scope="col" class="text-center">Stock</th>
					<th scope="col" class="text-center"></th>
					<th>Eliminar</th>
					<th>Editar</th>
					<th>Detalles</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in ListaProducto)
				{
					<tr>
						<td class="text-center">@item.ProcuctoId</td>
						<td class="text-center">@item.Nombre</td>
						<td class="text-center">@item.Descripcion</td>
						<td class="text-center">@item.Stock</td>
						<td></td>
						<td>
							<a href="/deleteProducto/@item.ProcuctoId" class="btn btn-danger bi bi-trash-fill"></a>
						</td>
						<td>
							<a href="/productoEdit/@item.ProcuctoId" class="btn btn-primary bi-box-arrow-up-right"></a>
						</td>
						<td>
							<a href="/detailsProducto/@item.ProcuctoId" class="btn btn-success bi-box-arrow-up-right"></a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
	<div class="card-footer">
		<a href="/" class="btn btn-outline-danger bi bi-house-door-fill"> Volver</a>
	</div>
</div>

@code {
	[Parameter]
	public int ProductoId { get; set; }
	public Producto producto { get; set; } = new Producto();
	public List<Producto> ListaProducto { get; set; } = new List<Producto>();
	public int Opcion = 0;

	protected override async Task OnInitializedAsync()
	{
		ListaProducto = await productoservices.Listar(t => true);
	}
	public async Task Buscar()
	{
	}

}
